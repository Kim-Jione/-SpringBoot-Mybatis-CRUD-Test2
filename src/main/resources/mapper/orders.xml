<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.firstapp.domain.orders.OrdersDao">

	<select id="findById"
		resultType="site.metacoding.firstapp.domain.orders.Orders">
		SELECT * FROM orders WHERE users_id=#{ordersId}
	</select>

	<select id="findAll"
		resultType="site.metacoding.firstapp.web.dto.request.OrdersProductDto">
		select *
		from product 
		where users_id = #{usersId}
		
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		INSERT
		INTO buy(users_id, product_id, created_at)
		VALUES(#{usersId},#{productId}, now())
	</insert>

	<update id="update">

	</update>

	<delete id="deleteById">
		DELETE FROM orders WHERE id = #{ordersId}
	</delete>

</mapper>